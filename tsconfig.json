{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "allowJs": false,
    "strict": true,
    "jsx": "react-jsx",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "types": ["vite/client"],
    "baseUrl": "./renderer",
    "paths": {
      "@components/*": ["components/*"],
      "@overlay/*": ["overlay/*"],
      "@chat/*": ["chatbox/*"]
    }
  },
  "include": [
    "renderer/**/*.ts",
    "renderer/**/*.tsx",
    "renderer/**/*.d.ts"
  ]
}
